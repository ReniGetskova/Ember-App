{{#employee-filter employees=employees as |people|}}
  <table class="table table-hover">
    <thead class="thead-dark">
      <tr>
        <th scope="col">#</th>
        <th scope="col">First Name</th>
        <th scope="col">Surname</th>
        <th scope="col">Details</th>
      </tr>
    </thead>
    <tbody>
        {{#each people as |employee|}}
            <tr>
                <th scope="row">{{employee.id}}</th>
                <td>{{employee.first_name}}</td>
                <td>{{employee.surname}}</td>
                <td>
                  {{#link-to 'employee' employee.id}} <button type="button" class="btn btn-secondary">View</button>{{/link-to}}
                </td>
            </tr>
        {{/each}}  
    </tbody>
  </table>
{{/employee-filter}}